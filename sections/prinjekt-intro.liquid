{% comment %}
Prinjekt – Big centered paragraph (simple)
Dynamic fields: text and circle color
{% endcomment %}

<link rel="stylesheet" href="{{ 'section-prinjekt-intro.css' | asset_url }}" media="all">

<section class="prinjekt-hero-section">
  <div
    class="prinjekt-hero-text"
    style="{% if section.settings.padding_y > 0 %}padding-block: {{ section.settings.padding_y }}px;{% endif %}"
  >
    <div class="pht-inner">
      <div class="pht-content rte">
        {{ section.settings.content }}
      </div>
    </div>
    <div class="prinjekt-circle" style="background-color: {{ section.settings.circle_color }};"></div>
  </div>
</section>

{% schema %}
{
  "name": "Prinjekt text",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Prinjekt, seit 2019 in der Fertigungsbranche etabliert, ist ein Pionier im Bereich 3D-Druck und Serienproduktion. Das Unternehmen bedient eine breite Palette von Kunden, sowohl privat als auch geschäftlich, und bietet maßgeschneiderte Lösungen für Ihre individuellen Anforderungen. Der Name \"Prinjekt\" selbst ist ein cleveres Wortspiel, das sich aus den Begriffen \"printing\" und \"injection-molding\" zusammensetzt.</p>"
    },
    {
      "type": "color",
      "id": "circle_color",
      "label": "Circle Color",
      "default": "#8b7355"
    },
    {
      "type": "range",
      "id": "padding_y",
      "label": "Text area vertical padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    { "name": "Prinjekt text" }
  ]
}
{% endschema %}
