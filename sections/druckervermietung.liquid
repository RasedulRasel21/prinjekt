{{ 'druckervermietung.css' | asset_url | stylesheet_tag }}

<div class="drucker-section">
  <div class="page-width">
    <div class="drucker-bg">
      <div class="drucker-header">
      <div class="drucker-header-left">
        <h2 class="drucker-title">{{ section.settings.title }}</h2>
        <p class="drucker-description">{{ section.settings.description }}</p>
      </div>
      <div class="drucker-header-right">
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="drucker-button-primary">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="drucker-tabs">
      <button class="drucker-tab-btn active" data-tab="ablauf">{{ section.settings.tab1_text }}</button>
      <button class="drucker-tab-btn" data-tab="kosten">{{ section.settings.tab2_text }}</button>
    </div>

    <div class="drucker-tab-content active" id="ablauf">
      <div class="drucker-grid">
        {% for block in section.blocks %}
          {% if block.type == 'ablauf_item' %}
            <div class="drucker-item">
              <h3 class="drucker-item-number">{{ block.settings.number }}.</h3>
              <div class="drucker-item-content">
                <h4 class="drucker-item-title">{{ block.settings.title }}</h4>
                <p class="drucker-item-description">{{ block.settings.description }}</p>
                <hr class="hr-tag"/>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="drucker-tab-content" id="kosten">
      <div class="drucker-grid">
        {% for block in section.blocks %}
          {% if block.type == 'kosten_item' %}
            <div class="drucker-item">
              <h3 class="drucker-item-number">{{ block.settings.number }}.</h3>
              <div class="drucker-item-content">
                <h4 class="drucker-item-title">{{ block.settings.title }}</h4>
                <p class="drucker-item-description">{{ block.settings.description }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.drucker-tab-btn');
    const tabContents = document.querySelectorAll('.drucker-tab-content');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');
        
        tabBtns.forEach(b => b.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));
        
        this.classList.add('active');
        document.getElementById(tabName).classList.add('active');
      });
    });
  });
</script>

