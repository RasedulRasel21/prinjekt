{{ 'image-slider.css' | asset_url | stylesheet_tag }}

<div 
  class="image-slider-section"
  style="--slider-pad-y: {{ section.settings.padding_y | default: 100 }}px;"
>
  <div class="slider-container">
    <div class="slider-track" id="sliderTrack">
      {% for block in section.blocks %}
        <div class="slider-item" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '400x400', crop: 'center' }}" 
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
            >
          {% else %}
            <div class="placeholder-image">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
(function() {
  const track = document.getElementById('sliderTrack');
  if (!track) return;
  
  const items = track.querySelectorAll('.slider-item:not(.slider-item-duplicate)');
  if (items.length === 0) return;
  
  // Clone items for seamless loop
  items.forEach(item => {
    const clone = item.cloneNode(true);
    clone.classList.add('slider-item-duplicate');
    track.appendChild(clone);
  });
  
  // Calculate animation duration based on number of items
  const itemCount = items.length;
  const itemWidth = 280; // Desktop width
  const gap = 20;
  const totalWidth = (itemWidth + gap) * itemCount;
  
  // Adjust speed for smooth scrolling (50 pixels per second)
  const duration = totalWidth / 50;
  track.style.animationDuration = duration + 's';
  
  // Reset animation on resize for responsiveness
  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function() {
      track.style.animation = 'none';
      setTimeout(function() {
        track.style.animation = '';
      }, 10);
    }, 250);
  });
})();
</script>

{% schema %}
{
  "name": "Image Slider",
  "tag": "section",
  "class": "section-image-slider",
  "settings": [
    {
      "type": "range",
      "id": "padding_y",
      "label": "Section height padding",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Slider",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
