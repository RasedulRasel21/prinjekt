{% comment %}
  sections/prinjekt-footer.liquid
{% endcomment %}

{{ 'prinjekt-footer.css' | asset_url | stylesheet_tag }}

<footer class="prinjekt-footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Logo Column -->
      <div class="footer-column footer-logo">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" class="footer-logo-img">
        {% else %}
          <h2 class="footer-logo-text">{{ section.settings.logo_text | default: shop.name }}</h2>
        {% endif %}
      </div>

      <!-- Navigation Column 1 -->
      <div class="footer-column footer-nav">
        <h3 class="footer-heading">{{ section.settings.menu1_title }}</h3>
        {% if section.settings.menu1 != blank %}
          <ul class="footer-menu">
            {% for link in linklists[section.settings.menu1].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Navigation Column 2 -->
      <div class="footer-column footer-nav">
        <h3 class="footer-heading">{{ section.settings.menu2_title }}</h3>
        {% if section.settings.menu2 != blank %}
          <ul class="footer-menu">
            {% for link in linklists[section.settings.menu2].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Navigation Column 3 -->
      <div class="footer-column footer-nav">
        <h3 class="footer-heading">{{ section.settings.menu3_title }}</h3>
        {% if section.settings.menu3 != blank %}
          <ul class="footer-menu">
            {% for link in linklists[section.settings.menu3].links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Contact Column -->
      <div class="footer-column footer-contact">
        <h3 class="footer-heading">{{ section.settings.contact_title }}</h3>
        {% if section.settings.phone %}
          <p class="contact-item">Phone: {{ section.settings.phone }}</p>
        {% endif %}
        {% if section.settings.email %}
          <p class="contact-item">E-Mail: <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></p>
        {% endif %}
      </div>
    </div>

    <!-- Social Icons -->
    <div class="footer-social">
      {% if section.settings.social_instagram %}
        <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" class="social-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.social_facebook %}
        <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" class="social-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
      {% endif %}
      {% if section.settings.social_linkedin %}
        <a href="{{ section.settings.social_linkedin }}" target="_blank" rel="noopener" class="social-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
      {% endif %}
    </div>

    <!-- Copyright -->
    <div class="footer-copyright">
      <p>{{ section.settings.copyright_text | default: 'Copyright © 2025 Prinjekt' }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Prinjekt Footer",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "PRINJEKT"
    },
    {
      "type": "header",
      "content": "Navigation Menu 1"
    },
    {
      "type": "text",
      "id": "menu1_title",
      "label": "Menu 1 Title",
      "default": "Allgemeines"
    },
    {
      "type": "link_list",
      "id": "menu1",
      "label": "Menu 1"
    },
    {
      "type": "header",
      "content": "Navigation Menu 2"
    },
    {
      "type": "text",
      "id": "menu2_title",
      "label": "Menu 2 Title",
      "default": "Bestellungen"
    },
    {
      "type": "link_list",
      "id": "menu2",
      "label": "Menu 2"
    },
    {
      "type": "header",
      "content": "Navigation Menu 3"
    },
    {
      "type": "text",
      "id": "menu3_title",
      "label": "Menu 3 Title",
      "default": "Sonstiges"
    },
    {
      "type": "link_list",
      "id": "menu3",
      "label": "Menu 3"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Section Title",
      "default": "Kontaktiere Uns"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+49 5101 5991784"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "support@prinjekt.de"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_linkedin",
      "label": "LinkedIn URL"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright © 2025 Prinjekt"
    }
  ],
  "presets": [
    {
      "name": "Prinjekt Footer"
    }
  ]
}
{% endschema %}