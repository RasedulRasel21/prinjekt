{% comment %}
  Hero Banner Section
  Place this file in: sections/hero-banner.liquid
{% endcomment %}

{{ 'about-hero.css' | asset_url | stylesheet_tag }}

<section class="about-hero-banner" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');">
  <div class="about-hero-banner__overlay"></div>
  <div class="about-hero-banner__container">
    <div class="about-hero-banner__content">
      {% if section.settings.heading != blank %}
        <h1 class="about-hero-banner__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="about-hero-banner__description">{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="about-hero-banner__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wer steckt hinter dem Next Level 3D-Druck?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Unsere Leidenschaft gilt dem 3D-Druck, und das spiegelt sich in jedem Detail wieder. Wir fertigen Ihr Modell nach Ihren Wünschen und verwenden dabei ausschließlich das von Ihnen gewählte Material. Auch Sonderwünsche bei den Druckeinstellungen sind für uns kein Problem."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Mehr Erfahren"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#FFA500"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFA500"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

