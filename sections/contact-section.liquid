{{ 'contact-section.css' | asset_url | stylesheet_tag }}

<div class="contact-section">
  <div class="contact-container">
    {% if section.settings.title != blank %}
      <h2 class="contact-title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p class="contact-description">{{ section.settings.description }}</p>
    {% endif %}

    <div class="contact-wrapper">
      <!-- Left Side - Contact Information -->
      <div class="contact-info-box">
        <h3 class="contact-info-title">{{ section.settings.info_title }}</h3>
        <p class="contact-info-subtitle">{{ section.settings.info_subtitle }}</p>

        <div class="contact-details">
          {% if section.settings.phone != blank %}
            <div class="contact-item">
              <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M22 16.92V19.92C22 20.4728 21.5523 20.9205 21 20.9205H18C9.71573 20.9205 3 14.2048 3 5.92053V3.00006C3 2.44778 3.44772 2.00006 4 2.00006H7C7.55228 2.00006 8 2.44778 8 3.00006V7.50006C8 8.0523 7.55228 8.50006 7 8.50006H5.5C6.5 12.5001 10.5 16.5001 14.5 17.5001V16.0001C14.5 15.4478 14.9477 15.0001 15.5 15.0001H20C20.5523 15.0001 21 15.4478 21 16.0001V16.92H22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ section.settings.phone }}</span>
            </div>
          {% endif %}

          {% if section.settings.email != blank %}
            <div class="contact-item">
              <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 8L10.89 13.26C11.5 13.67 12.5 13.67 13.11 13.26L21 8M5 19H19C20.1046 19 21 18.1046 21 17V7C21 5.89543 20.1046 5 19 5H5C3.89543 5 3 5.89543 3 7V17C3 18.1046 3.89543 19 5 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ section.settings.email }}</span>
            </div>
          {% endif %}

          {% if section.settings.address != blank %}
            <div class="contact-item">
              <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ section.settings.address }}</span>
            </div>
          {% endif %}
        </div>

        <div class="contact-decoration"></div>
      </div>

      <!-- Right Side - Contact Form -->
      <div class="contact-form-box">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="form-success">
              {{ section.settings.success_message }}
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <input type="hidden" name="contact[recipient]" value="{{ section.settings.recipient_email }}">

          <div class="form-row">
            <div class="form-group">
              <label for="contact-first-name">{{ section.settings.first_name_label }}</label>
              <input 
                type="text" 
                id="contact-first-name" 
                name="contact[first_name]" 
                placeholder="{{ section.settings.first_name_placeholder }}"
                required
              >
            </div>

            <div class="form-group">
              <label for="contact-last-name">{{ section.settings.last_name_label }}</label>
              <input 
                type="text" 
                id="contact-last-name" 
                name="contact[last_name]" 
                placeholder="{{ section.settings.last_name_placeholder }}"
                required
              >
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="contact-email">{{ section.settings.email_label }}</label>
              <input 
                type="email" 
                id="contact-email" 
                name="contact[email]" 
                placeholder="{{ section.settings.email_placeholder }}"
                required
              >
            </div>

            <div class="form-group">
              <label for="contact-phone">{{ section.settings.phone_label }}</label>
              <input 
                type="tel" 
                id="contact-phone" 
                name="contact[phone]" 
                placeholder="{{ section.settings.phone_placeholder }}"
              >
            </div>
          </div>

          <div class="form-group">
            <label for="contact-message">{{ section.settings.message_label }}</label>
            <textarea 
              id="contact-message" 
              name="contact[body]" 
              placeholder="{{ section.settings.message_placeholder }}"
              rows="4"
              required
            ></textarea>
          </div>

          <div class="form-footer">
            <button type="submit" class="submit-button">
              {{ section.settings.submit_text }}
            </button>

            <div class="terms-checkbox">
              <input type="checkbox" id="terms" name="contact[terms]" required>
              <label for="terms">{{ section.settings.terms_text }}</label>
            </div>
          </div>
        {% endform %}

        <div class="form-decoration"></div>
      </div>
    </div>
  </div>
</div>

