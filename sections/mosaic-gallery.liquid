{{ 'mosaic-gallery.css' | asset_url | stylesheet_tag }}

<div class="mosaic-gallery-section">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="mosaic-gallery-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="mosaic-gallery-grid">
      {% for block in section.blocks %}
        <div class="mosaic-item mosaic-item-{{ forloop.index }}" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | img_url: '800x' }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="mosaic-placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Mosaic Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Gallery"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mosaic Gallery",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}